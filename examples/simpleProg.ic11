pin PowerLedSource d0;
pin FlashLight d1;
pin PowerLedTarget d2;

const MinPower = 20000;

void Main()
{
    while(true)
    {
        var power = PowerLedSource.Setting;
        Base.Setting = power;

        FlashLight.On = power < MinPower;

        if (PowerLedTarget.IsSet)
            PowerLedTarget.Setting = power;
    }
}
